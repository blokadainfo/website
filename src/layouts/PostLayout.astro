---
import Layout from '@layouts/Layout.astro';
import Navbar from '@components/custom/navbar/navbar.svelte';
import { dateToSRB } from '@functions/datetosrb';
import { genderedAuthor } from '@functions/genderedauthor';
import { formatReadingTime } from '@functions/remark-reading-time';
const { frontmatter } = Astro.props;
const readingTimeLabel = formatReadingTime(frontmatter.readingTimeSeconds);
---

<Layout title={frontmatter.title}>
  <Navbar homepage={false} client:load />
  <article class="mx-auto my-8 max-w-4xl px-6 tracking-tight hyphens-auto">
    <header class="mb-8 text-center">
      <div class="grid w-full">
        <img
          src={frontmatter.image}
          alt="Naslovna slika"
          class="col-start-1 row-start-1 w-full object-cover"
        />
        <div class="col-start-1 row-start-1 h-full bg-gradient-to-t from-black to-transparent">
        </div>
        <div class="col-start-1 row-start-1 self-end p-3 text-right">
          <a href={frontmatter.imgsource}>
            <span class="text-md font-light text-gray-200 sm:text-xl">
              {frontmatter.imglabel}
            </span>
          </a>
        </div>
      </div>
      <div
        class="text-md flex flex-col items-center gap-y-1 text-gray-500 md:flex-row md:justify-between"
      >
        <span class="text-center whitespace-nowrap md:text-left">{frontmatter.author}</span>
        <div class="flex flex-wrap items-center justify-center gap-x-1 md:justify-end">
          <span class="whitespace-nowrap">{frontmatter.date}</span>
          <span class="whitespace-nowrap">|</span>
          <span class="whitespace-nowrap">{readingTimeLabel}</span>
        </div>
      </div>
    </header>
    <section class="prose md:prose-lg prose-p:text-justify max-w-none">
      <slot />
    </section>
  </article>
  <footer class="my-8 text-center">
    <p class="flex flex-wrap justify-center gap-x-1 gap-y-1 p-5 text-sm text-gray-500">
      <span>
        {genderedAuthor(frontmatter.gender)}
        {frontmatter.author}
      </span>
      <span class="hidden sm:inline">|</span>
      <span>Napisano {dateToSRB(frontmatter.date)}</span>
    </p>
  </footer>
</Layout>
